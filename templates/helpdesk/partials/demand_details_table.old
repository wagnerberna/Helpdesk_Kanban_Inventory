<div class="container">
    <h2>Detalhes do chamado:</h2>

    <table class="demand-table">
        <thead>
            <th >ID</th>
            <th>Nome</th>
            <th>Título</th>
            <th>categoria</th>
            <th>Atendente</th>
            <th>Status</th>
        </thead>
        
        <tr>
            <td>{{demand.id}}</td>
            <td>{{demand.user_name}}</td>
            <td>{{demand.title}}</td>
            <td>{{demand.category}}</td>
            <td>{{demand.attendant}}</td>
            <td>{{demand.status}}</td>
        </tr>
    </table>
</div>

<div class="container">
    <table class="demand-table">
        <thead>
            <th >Descrição</th>
            <th>Solução</th>

        </thead>
        
        <tr>
            <td>{{demand.description}}</td>
            <td>{{demand.solution}}</td>
        </tr>
    </table>

    <a href="{%url "demand_delete" demand.id%}"><i class="fa-sharp fa-solid fa-trash-can"></i></a>
</div>